<%= render "nav" %>

<h1>All poems</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>

  <% @poems.each do |poem| %>
    <tr>
      <td><%= poem.title %></td>
      <td><%= poem.text.html_safe %></td>
      <td><%= link_to 'Show', poem_path(poem) %></td>
      <td><%= link_to 'Delete', poem_delete_path(poem) %></td>
    </tr>
  <% end %>
</table>